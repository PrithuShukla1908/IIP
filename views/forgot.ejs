<%- include("partials/header") %> 
<style>
     body {
          position: relative;
          height: 100%;
          width: 100%;
     }

     .inf {
          text-align: center;
     }

     .login {
          position: absolute;
          width: 600px;
          /* border: 3px solid black; */
          border-radius: 20px;
          padding: 10px;
          top: 50%;
          left: 50%;
          transform: translate(-50%, 50%);
     }
     .logo {
          width: 70px;
     }

     .form-group {
          margin: 10px;
     }

     @media (max-width: 700px) {
          .navbar {
               width: 100%;
          }
          .login {
               width: 100%;
          }
     }
</style>

<div class="login">
     <h1 class="inf">Change Password</h1>
     <form action="/forgot-password" method="POST">
          <div class="form-group">
               <label
                    for="user-id">Username</label>
               <input type="text"
                    class="form-control"
                    id="user-id"
                    placeholder="Username"
                    name="usrname">
          </div>
          <div class="form-group">
               <label
                    for="password"> New password</label>
               <input type="password"
                    class="form-control"
                    id="newpassword"
                    placeholder="New Password"
                    name="newpassword">
          </div>
          <div class="form-group">
               <button type="submit" class="btn btn-primary" name="btn">Change Password</button>
          </div>
          <a href="/sign-up" class="nav-link">Click here to Sign up!</a>
     </form>
</div>
<%- include("partials/footer") %> 